#!/usr/bin/env node

'use strict'

var dns   = require('dns');
var glob  = require('glob');
var Mocha = require('mocha');
var path  = require('path');

var mocha   = new Mocha();
var testDir = path.join(__dirname, '..', 'test');

glob.sync('**/*.js', {
  cwd: testDir,
  nosort: true,
}).forEach(function(file) {
  mocha.addFile(path.join(testDir, file));
});

dns.lookup('example.com', function(err, address, family) {
  process.env.EXAMPLE_COM = address;

  mocha
    .bail(true)
    .reporter('spec')
    .timeout(0)
    .ui('bdd')
    .run(process.exit)
  ;
});
